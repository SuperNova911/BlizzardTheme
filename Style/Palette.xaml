<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BlizzardTheme.Style">

    <!--Color-->
    <Color x:Key="Blizz.Color.Signature">#FF00AEFF</Color>
    <Color x:Key="Blizz.Color.Background.Default">#FF1D222C</Color>
    <Color x:Key="Blizz.Color.Background.Light">#FF272E3B</Color>
    
    <!--Brush-->
    <SolidColorBrush x:Key="Blizz.Brush.Signature" Color="{StaticResource Blizz.Color.Signature}" />
    <SolidColorBrush x:Key="Blizz.Brush.Background.Default" Color="{StaticResource Blizz.Color.Background.Default}" />
    <SolidColorBrush x:Key="Blizz.Brush.Background.Light" Color="{StaticResource Blizz.Color.Background.Light}" />
</ResourceDictionary>